<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:scrollbars="vertical"
        tools:context="com.bakirci.sporx.DetailedActivityFragment"
        tools:showIn="@layout/activity_detailed">


        <ImageView
            android:id="@+id/imageDetailed"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/titleDetailed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageDetailed"
            android:layout_below="@+id/imageDetailed"
            android:paddingBottom="16dp"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/dateandsourceDetailed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/imageDetailed"
            android:layout_below="@id/titleDetailed"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"
                android:paddingBottom="@dimen/activity_vertical_margin" />

            <TextView
                android:id="@+id/sourceDetailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/dateDetailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:textColor="@color/colorAccent"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"
                android:paddingBottom="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/headlineDetailed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageDetailed"
            android:layout_below="@+id/dateandsourceDetailed"
            android:paddingBottom="16dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bodyDetailed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageDetailed"
            android:layout_below="@+id/headlineDetailed"
            android:paddingBottom="16dp" />

        <LinearLayout
            android:id="@+id/katogoriandcatsDetailed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/imageDetailed"
            android:layout_below="@id/bodyDetailed"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"
                android:paddingBottom="@dimen/activity_vertical_margin" />

            <TextView
                android:id="@+id/kategoriDetailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="Kategoriler:"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/catsDetailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:textColor="@color/colorAccent"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"
                android:paddingBottom="16dp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
